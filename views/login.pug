extends layout

block content
  form(method='POST' action='#' name="loginForm" id="loginForm")
    div#login.container
      fieldset
        legend: strong.text-info Login page

        div.form-group
          label Username:
          input.form-control(name='username', value=username, autofocus)

        div.form-group
          label Password:
          input.form-control(name='password', type='password')

        div.form-actions
          div.row
            div.col-md-1
              input.btn.btn-primary(type='button', value='Login', onclick='submit_login()')
          div.row
            div.col-md-3 
              button.btn.btn-lg.btn-google.btn-block.text-uppercase(href='/auth/google')
                i.fab.fa-google.mr-2
                  |  Sign in with Google
              button.btn.btn-lg.btn-facebook.btn-block.text-uppercase(href='#')
                i.fab.fa-facebook-f.mr-2
                  |  Sign in with Facebook
       
  script
    include ../public/script2.js

